<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DFDFDF"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/back" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/home_search_layout_border">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/classify_search_border">

                <Spinner
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:dropDownHorizontalOffset="50dp"
                    android:dropDownVerticalOffset="40dp"
                    android:dropDownWidth="150dp"
                    android:paddingLeft="10dp"
                    android:visibility="visible" />
                <!--android:dropDownHorizontalOffset="50dp"-->
                <!--android:dropDownVerticalOffset="20dp"-->

                <TextView
                    android:id="@+id/tv_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="商品"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_shops"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="店铺"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <com.lidegou.lideshangmeng.mobile.util.view.SearchClearEditText
                    android:id="@+id/clear_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="54dp"
                    android:layout_marginRight="59dp"
                    android:background="@null"
                    android:hint="商品/店铺搜索"
                    android:paddingLeft="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColorHint="#C3C3C3"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/tv_search"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/search_text"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="@color/white" />


            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="热门搜索"
            android:textColor="#000000" />

        <GridView
            android:id="@+id/search_hot_lv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/dp_5"
            android:numColumns="3"
            android:scrollbars="none"
            android:visibility="visible"></GridView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="历史搜索"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/clear_search_history_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:padding="15dp"
                android:src="@drawable/search_delete"
                android:visibility="visible"></ImageView>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/search_framelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridView
                android:id="@+id/search_history_gv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:visibility="visible"></GridView>

            <ListView
                android:id="@+id/search_xianshi_lv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:scrollbars="none"
                android:visibility="gone"></ListView>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
