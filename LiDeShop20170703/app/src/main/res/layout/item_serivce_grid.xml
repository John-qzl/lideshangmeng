<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="15sp" />

        <com.lidegou.lideshangmeng.mobile.util.view.CircleImage
            android:id="@+id/iv_user_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20" />

        <TextView
            android:id="@+id/tv_user_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/iv_user_img"

            android:background="@drawable/chatto_bg_focused"
            android:gravity="center"
            android:maxWidth="250dp"
            android:textColor="#333"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_service_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_service_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="20dp"
            android:src="@drawable/touxiang1" />

        <TextView
            android:id="@+id/tv_service_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"

            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_service_img"
            android:background="@drawable/chatfrom_bg_focused"

            android:gravity="center"
            android:maxWidth="250dp"
            android:textColor="#fff"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />
</LinearLayout>