<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="2dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_mylike_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/frame"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="达啊实打实大师爱阿斯达爱上"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mylike_title"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="#FF7213"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_mylike_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_title"
            android:layout_toRightOf="@+id/fuhao"
            android:text="2000"
            android:textColor="#FF7213"
            android:textSize="15sp" />


    </LinearLayout>

</RelativeLayout>